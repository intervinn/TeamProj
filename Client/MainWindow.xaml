<Window x:Class="Client.MainWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
           xmlns:pages="clr-namespace:Client.Views.Pages"
           Title="Team Proj Client" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Навигационное меню -->
        <StackPanel Grid.Column="0" Background="LightGray" Margin="5">
            <ui:Button Content="Students" Command="{Binding NavigateToStudentsCommand}" Margin="5"/>
            <ui:Button Content="Teachers" Command="{Binding NavigateToTeachersCommand}" Margin="5"/>
            <ui:Button Content="Grades" Command="{Binding NavigateToGradesCommand}" Margin="5"/>
            <ui:Button Content="Lessons" Command="{Binding NavigateToLessonsCommand}" Margin="5"/>
            <ui:Button Content="Schedules" Command="{Binding NavigateToSchedulesCommand}" Margin="5"/>
        </StackPanel>

        <!-- Frame для страниц -->
        <Frame Grid.Column="1" x:Name="MainFrame" Margin="5" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
