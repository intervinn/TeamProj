<Page x:Class="Client.Views.Pages.LessonsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views.Pages" xmlns:ui="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LessonsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопки CRUD -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <ui:Button Content="Load" Command="{Binding LoadLessonsCommand}" Margin="5"/>
            <ui:Button Content="Add" Command="{Binding AddLessonCommand}" Margin="5"/>
            <ui:Button Content="Edit" Command="{Binding EditLessonCommand}" Margin="5"/>
            <ui:Button Content="Delete" Command="{Binding DeleteLessonCommand}" Margin="5"/>
        </StackPanel>

        <!-- DataGrid -->
        <ui:DataGrid Grid.Row="1" ItemsSource="{Binding Lessons}" SelectedItem="{Binding SelectedLesson}" 
                     AutoGenerateColumns="False" Margin="5">
            <ui:DataGrid.Columns>
                <ui:DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <ui:DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="*"/>
                <ui:DataGridTextColumn Header="Start Time" Binding="{Binding StartTime, StringFormat=dd.MM.yyyy HH:mm}" Width="120"/>
                <ui:DataGridTextColumn Header="End Time" Binding="{Binding EndTime, StringFormat=dd.MM.yyyy HH:mm}" Width="120"/>
                <ui:DataGridTextColumn Header="Teacher ID" Binding="{Binding TeacherId}" Width="80"/>
                <ui:DataGridTextColumn Header="Schedule ID" Binding="{Binding ScheduleId}" Width="80"/>
            </ui:DataGrid.Columns>
        </ui:DataGrid>
    </Grid>
</Page>
