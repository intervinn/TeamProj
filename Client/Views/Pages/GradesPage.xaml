<Page x:Class="Client.Views.Pages.GradesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views.Pages" xmlns:ui="http://schemas.microsoft.com/netfx/2007/xaml/presentation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GradesPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопки CRUD -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <ui:Button Content="Load" Command="{Binding LoadGradesCommand}" Margin="5"/>
            <ui:Button Content="Add" Command="{Binding AddGradeCommand}" Margin="5"/>
            <ui:Button Content="Edit" Command="{Binding EditGradeCommand}" Margin="5"/>
            <ui:Button Content="Delete" Command="{Binding DeleteGradeCommand}" Margin="5"/>
        </StackPanel>

        <!-- DataGrid -->
        <ui:DataGrid Grid.Row="1" ItemsSource="{Binding Grades}" SelectedItem="{Binding SelectedGrade}" 
                     AutoGenerateColumns="False" Margin="5">
            <ui:DataGrid.Columns>
                <ui:DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <ui:DataGridTextColumn Header="Added At" Binding="{Binding AddedAt, StringFormat=dd.MM.yyyy}" Width="100"/>
                <ui:DataGridTextColumn Header="Removed At" Binding="{Binding RemovedAt, StringFormat=dd.MM.yyyy}" Width="100"/>
                <ui:DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                <ui:DataGridTextColumn Header="Commentary" Binding="{Binding Commentary}" Width="*"/>
                <ui:DataGridTextColumn Header="Teacher ID" Binding="{Binding TeacherId}" Width="80"/>
                <ui:DataGridTextColumn Header="Student ID" Binding="{Binding StudentId}" Width="80"/>
            </ui:DataGrid.Columns>
        </ui:DataGrid>
    </Grid>
</Page>
