<Page x:Class="TeamProj.Views.Pages.TeachersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:TeamProj.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeachersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Кнопки CRUD -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <ui:Button Content="Load" Command="{Binding LoadTeachersCommand}" Margin="5"/>
            <ui:Button Content="Add" Command="{Binding AddTeacherCommand}" Margin="5" />
            <ui:Button Content="Edit" Command="{Binding EditTeacherCommand}" Margin="5"/>
            <ui:Button Content="Delete" Command="{Binding DeleteTeacherCommand}" Margin="5"/>
        </StackPanel>

        <!-- DataGrid -->
        <ui:DataGrid Grid.Row="1" ItemsSource="{Binding Teachers}" SelectedItem="{Binding SelectedTeacher}" 
                     AutoGenerateColumns="False" Margin="5">
            <ui:DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Born At" Binding="{Binding BornAt, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Hired At" Binding="{Binding HiredAt, StringFormat=dd.MM.yyyy}" Width="100"/>
            </ui:DataGrid.Columns>
        </ui:DataGrid>
    </Grid>
</Page>
